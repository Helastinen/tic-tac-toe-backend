{
  "name": "tic-tac-toe-backend",
  "version": "1.0.0",
  "description": "backend for tic-tac-toe app",
  "license": "MIT",
  "author": "Antti Hellsten",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "test": "NODE_ENV=test ts-node src/index.ts",
    "lint": "eslint .",
    "build:ui": "rm -rf dist && cd ../tic-tac-toe-frontend && npm run build && cp -r dist ../tic-tac-toe-backend",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.1",
    "morgan": "^1.10.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/express": "^5.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
