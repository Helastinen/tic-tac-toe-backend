{
  "name": "tic-tac-toe-backend",
  "version": "1.0.0",
  "description": "backend for tic-tac-toe app",
  "license": "MIT",
  "author": "Antti Hellsten",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "NODE_ENV=test node --watch index.js",
